{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true
  },
  "include": [
    "src"
  ]
}
